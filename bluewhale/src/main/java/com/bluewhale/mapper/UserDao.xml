<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bluewhale.mapper.UserDao">
	<!-- 添加用户 -->
	<insert id="addUser" parameterType="user" keyProperty="id" useGeneratedKeys="true" >
		insert into blog_user(username,password,root)
		values(#{username},#{password},#{root})
	</insert>
	
	<!-- 更新用户信息 -->
	<update id="updateUserInfo" parameterType="user">
		update blog_user set
			username = #{username},
			password = #{password}
		where
			id = #{id}
	</update>
	
	<!-- 通过用户id获取用户 -->
	<select id="getUserById" parameterType="Integer" resultType="user">
		select * from blog_user where id = #{value}
	</select>
	
	<!-- 通过用户email获取用户 -->
	<select id="getUserByEmail" parameterType="String" resultType="user">
		select * from blog_user where email = #{value}
	</select>

</mapper>